{
  "name": "javascript-blog",
  "version": "1.0.0",
  "scripts": {
    "test:html": "html-validate \"index.html\"",
    "test:js": "eslint js/",
    "test": "npm-run-all test:*",
    "watch:sass": "sass --watch sass/style.scss:css/style.css --no-source-map",
    "watch:browsersync": "browser-sync start --server --files \"css/*.css\" \"*.html\" \"js/*.js\"",
    "watch": "npm-run-all -p watch:*",
    "build:css": "sass sass/style.scss css/style.css --no-source-map && postcss css/style.css -o css/style.css",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "eslint": "^8.56.0",
    "html-validate": "^9.7.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.91.0"
  }
}
